<!-- Four -->
<section id="four" class="wrapper style3 special">
  <div class="container">
    <header class="major">
      <h2>店主のつぶやき</h2>
      <p>使えるクーポンが見つかるかも？</p>
    </header>
  </div>
</section>

<div class="tweet-box">
  <% if company_signed_in? %>
    <div id="post_field", class="post_field">
      <%= form_for @companyeet, class:"form-group", remote: true, authenticity_token: true do |f| %>
        <div class="modal-body">
          <div class="form-group">
            <%= f.label :つぶやき, for:"recipient-name", class:"control-label" %>
            <%= f.text_area :title, type:"text", class:"form-control", id:"recipient-name", required:"true" %>
          </div>
          <div class="form-group">
            <%= f.label :画像, for:"exampleInputFile", class:"control-label" %>
            <%= f.file_field :pic, type:"file", required:"true" %>
            <%= f.hidden_field :company_id %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit :編集, class:"btn btn-primary", data: { disable_with: 'Sending...'} %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

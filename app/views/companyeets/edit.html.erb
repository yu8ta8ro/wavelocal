<div class="tweet-box">
  <% if company_signed_in? %>
    <div id="post_field">
      <%= form_for @companyeet, remote: true, authenticity_token: true do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title %>
      <%= f.label :画像 %>
      <%= f.file_field :pic %>
      <%= f.hidden_field :company_id %>
      <%= f.submit :投稿 %>
      <% end %>
    </div>
  <% end %>
</div>

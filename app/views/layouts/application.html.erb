<!DOCTYPE html>
<html>
  <head>
    <title>Wavelocal</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <% if controller.controller_name == "tops" %>
        <%= render "layouts/tops_header" %>
      <% elsif controller.controller_name == "usereets" %>
        <%= render "layouts/usereets_header" %>
      <% elsif controller.controller_name == "companyeets" %>
        <%= render "layouts/companyeets_header" %>
      <% end %>
    </header>

    <% flash.each do |key, value| %>
      <% key = "info" if key == "notice" %>
      <% key = "danger"  if key == "alert" %>
      <%= content_tag :div, value, class: "alert alert-#{key}" %>
    <% end %>

    <%= yield %>

    <footer class="header footer">
      <p>
        Copyright WaveLocal 2016.
      </p>
    </footer>
  </body>
</html>

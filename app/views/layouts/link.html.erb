<!DOCTYPE html>
<html>
  <head>
    <title>COOLPON</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">
  </head>


  <body class="landing">

    <!-- Header -->
      <header id="header" class="alt">
        <h1><small><a href="/", style="text-decoration: none;">coolpon</a></small></h1>
        <nav id="nav">
          <ul>
            <% if user_signed_in? %>
              <% unless company_signed_in? %>
                <li><%= link_to "クーポン情報", companyeets_path %></li>
                <li><%= link_to "登録情報を編集", edit_user_registration_path %></li>
                <li><%= link_to "ログアウト", destroy_user_session_path %></li>
              <% end %>
            <% elsif company_signed_in? %>
              <li><%= link_to "クーポン情報", companyeets_path %></li>
              <li><%= link_to "登録情報を編集", edit_company_registration_path %></li>
              <li><%= link_to "ログアウト", destroy_company_session_path %></li>
            <% else %>
              <li><%= link_to "ログイン", new_user_session_path %></li>
              <li><%= link_to "クーポン情報", companyeets_path %></li>
              <li><%= link_to "新規登録", new_user_registration_path %></li>
            <% end %>
          </ul>
        </nav>
      </header>

      <!-- Flash Message -->
      <% flash.each do |key, value| %>
        <% key = "info" if key == "notice" %>
        <% key = "danger"  if key == "alert" %>
        <%= content_tag :div, value, class: "alert alert-#{key}" %>
      <% end %>

       <%= yield %>


    <!-- Footer -->
      <footer id="footer">
        <div class="container">
          <ul class="icons">
            <li><a href="#" class="icon fa-facebook"></a></li>
            <li><a href="#" class="icon fa-twitter"></a></li>
          </ul>
          <ul class="copyright">
          <li>Copyright <a href="/">Coolpon</a>2017</li>
          </ul>
        </div>
      </footer>

    <!-- Scripts -->
      <script src="assets/jquery.min.js"></script>
      <script src="assets/skel.min.js"></script>
      <script src="assets/util.js"></script>
      <script src="assets/main.js"></script>


  </body>
</html>

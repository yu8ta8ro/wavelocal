<div id="post", class="post-class">
  <p><%= @nickname %>さんのページ</p>
  <% @usereets.each do |usereet| %>
    <div class="tweet-box">
      <div class="super-chat-box">
        <div class="chat-box">
          <div class="chat-face">
            <%= image_tag @pic, width:"90", height:"90"%>
          </div>
          <div class="chat-area">
            <div class="chat-hukidashi">
              <%= usereet.title %>
            </div>
          </div>
        </div>
        <div class="frame">
          <%= image_tag usereet.pic, class: "image_tag" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

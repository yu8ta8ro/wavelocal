<div class="form-wrapper">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-item">
      <%= f.email_field :email, autofocus: true, type:"email", required:"true", placeholder:"Email Address" %>
    </div>

    <div class="form-item">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", type:"password", required:"required", placeholder:"Password" %>
    </div>


    <div class="form-item">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", required:"required", placeholder:"パスワード確認" %>
    </div>

    <div class="form-item">
      <%= f.label :nickname %><br />
      <%= f.text_field :nickname %>
    </div>

    <div class="form-item">
      <%= f.file_field :avatar %>
    </div>

    <div class="button-panel">
      <div class="actions">
        <%= f.submit "Sign up", class:"button", value:"Sign Up" %>
      </div>
    </div>

    <div class="form-footer">
      <p><%= render "users/shared/links" %></p>
    </div>

  <% end %>
</div>

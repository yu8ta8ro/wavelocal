<div class="form-wrapper">
  <h1>ログイン</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-item">
      <%= f.email_field :email, autofocus: true, type:"email", required:"true", placeholder:"メールアドレス" %>
    </div>

    <div class="form-item">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 字以下)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", type:"password", required:"required", placeholder:"パスワード" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-item">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="button-panel">
      <div class="actions">
        <%= f.submit "ログイン", class:"button", value:"Sign Up" %>
      </div>
    </div>

    <div class="form-footer">
      <p><%= render "companies/shared/links" %></p>
    </div>

  <% end %>

</div>
